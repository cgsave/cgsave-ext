{
  "name": "cgsave",
  "description": "Adds a toolbar button to save the current page to cgsave.com",
  "version": "6",

  "browser_action": {
    "default_title": "Add to cgsave",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://cgsave.com/"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },

  "web_accessible_resources": [
    "auth.html",
    "icon16.png"
  ],

  "manifest_version": 2
}
